extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/users/register")
            p Username:
                input(type="text" name="username" placeholder="")
            p Password:
                input(type="text" name="password" placeholder="")
            p Confirm Password:
                input(type="text" name="password2" placeholder="")
            input(type="submit")
